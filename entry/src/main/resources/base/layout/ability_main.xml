<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Image
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:image_src="$media:icon_logo"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="50vp"/>
    <TextField
        ohos:id="$+id:username"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:hint="请输入账号"
        ohos:hint_color="#999999"
        ohos:left_margin="20vp"
        ohos:padding="10vp"
        ohos:right_margin="20vp"
        ohos:text_color="#333333"
        ohos:text_size="20fp"
        ohos:top_margin="30vp"/>

    <include
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:layout="$layout:layout_line"/>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="20vp"
        ohos:orientation="horizontal"
        ohos:right_margin="20vp"
        ohos:top_margin="10vp">

        <TextField
            ohos:id="$+id:password"
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:text_input_type="pattern_password"
            ohos:hint="请输入密码"
            ohos:hint_color="#999999"
            ohos:layout_alignment="vertical_center"
            ohos:padding="10vp"
            ohos:text_color="#333333"
            ohos:text_size="20fp"
            ohos:weight="1"/>

        <Image
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:image_src="$media:icon_pwd_close"
            ohos:layout_alignment="vertical_center"
            ohos:right_margin="6vp"/>
    </DirectionalLayout>


<!--    <Button-->
<!--        ohos:id="$+id:btn1"-->
<!--        ohos:height="56vp"-->
<!--        ohos:width="match_parent"-->
<!--        ohos:left_margin="20vp"-->
<!--        ohos:padding="10vp"-->
<!--        ohos:right_margin="20vp"-->
<!--        ohos:text="登 录"-->
<!--        ohos:text_color="#000000"-->
<!--        ohos:text_size="24fp"/>-->
    <include
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:layout="$layout:layout_line"/>

    <Text
        ohos:id="$+id:btn2"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="right"
        ohos:margin="20vp"
        ohos:text="找回密码"
        ohos:text_color="#1973FB"
        ohos:text_size="18fp"/>

    <Button
        ohos:id="$+id:btn1"
        ohos:height="56vp"
        ohos:width="match_parent"
        ohos:background_element="$graphic:shape_btn_login"
        ohos:left_margin="20vp"
        ohos:padding="10vp"
        ohos:right_margin="20vp"
        ohos:text="登 录"
        ohos:text_color="#ffffff"
        ohos:text_size="24fp"/>

    <Button
        ohos:id="$+id:btn_register"
        ohos:height="56vp"
        ohos:width="match_parent"
        ohos:background_element="$graphic:shape_btn_register"
        ohos:left_margin="20vp"
        ohos:padding="10vp"
        ohos:right_margin="20vp"
        ohos:text="注 册"
        ohos:text_color="#1973FB"
        ohos:text_size="24fp"
        ohos:top_margin="20vp"/>

    <Text
        ohos:id="$+id:msgtip"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:margin="20vp"
        ohos:text_size="16fp"/>

    <DirectionalLayout
        ohos:height="0vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="vertical"
        ohos:weight="1">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="第三方账号登录"
            ohos:text_color="#999999"
            ohos:text_size="18fp"/>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:top_margin="20vp"
            ohos:orientation="horizontal">
            <Image
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:image_src="$media:icon_wx"/>

            <Image
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:image_src="$media:icon_zfb"/>
        </DirectionalLayout>
    </DirectionalLayout>


</DirectionalLayout>